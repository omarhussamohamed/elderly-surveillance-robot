<launch>

  <!-- ===================== -->
  <!-- Bringup (NO Cloud) -->
  <!-- ===================== -->
  <include file="$(find elderly_bot)/launch/bringup.launch">
    <arg name="use_cloud" value="false"/>
  </include>

  <!-- ===================== -->
  <!-- Patrol Client (Disabled by Default) -->
  <!-- ===================== -->
  <node pkg="elderly_bot"
        type="patrol_client.py"
        name="patrol_client"
        output="screen">

    <!-- Explicitly disable patrol until navigation is stable -->
    <param name="enabled" value="false"/>

    <!-- Load patrol goals -->
    <rosparam file="$(find elderly_bot)/config/navigation/patrol_goals.yaml"/>

  </node>

  <!-- ===================== -->
  <!-- Navigation stack -->
  <!-- ===================== -->
  <!-- move_base, costmaps, planners -->
  <!-- Intentionally NOT launched yet -->

</launch>
